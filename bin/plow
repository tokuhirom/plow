#!/usr/bin/env perl
use strict;
use warnings;
use utf8;
use 5.10.0;
use Getopt::Long;

GetOptions(
    'e=s' => \my $eval,
);

use FindBin;
use File::Spec;

my $libpath = File::Spec->catdir($FindBin::RealBin, '../lib');

$ENV{PERLIO} = ':utf8';

if (defined $eval) {
    exec($^X, "-I$libpath", '-MPlow', '-CSDLA', '-E', $eval, '--', @ARGV);
} elsif (@ARGV > 0) {
    exec($^X, "-I$libpath", '-MPlow', '-CSDLA', '--', @ARGV);
} elsif (-t STDIN) {
    # repl
    ...
} else {
    # do it?
    ...
}

